<div class="search-bar">
  <%= form_with url: search_products_path, method: :get, local: true, class: "search-form" do |f| %>
    <%= f.text_field :keyword, placeholder: "Search...", value: params[:keyword], class: "input" %>
    <%= check_box_tag "categories[]", "Books", params[:categories]&.include?("Books") %> Books
    <%= check_box_tag "categories[]", "Merchandise", params[:categories]&.include?("Merchandise") %> Merch
    <%= f.submit "Go", class: "btn" %>
  <% end %>
</div>